/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include "PRO_Recevier-pinctrl.dtsi"

/ {
    model = "PRO Receiver";
	compatible = "rarebit,pro-receiver";

    chosen {
	    zephyr,console = &uart0;
	    zephyr,shell-uart = &uart0;
	    zephyr,uart-mcumgr = &uart0;
	    zephyr,bt-mon-uart = &uart0;
	    zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

    nrf_radio_fem: skyworks-rfx2411 {
        compatible = "generic-fem-two-ctrl-pins";
        ctx-gpios = <&gpio1 5 0>;
        ctx-settle-time-us = <1>;
        crx-gpios = <&gpio1 6 0>;
        crx-settle-time-us = <1>;
        tx-gain-db = <8>;
        rx-gain-db = <8>;
     };

    pwmleds {
        compatible = "pwm-leds";
        status = "okay";

        pwm_ledr: pwm_led_r {
            pwms = <&pwm0 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
            status = "okay";
        };
        pwm_ledg: pwm_led_g {
            pwms = <&pwm0 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
            status = "okay";
        };
        pwm_ledb: pwm_led_b {
            pwms = <&pwm0 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
            status = "okay";
        };
        pwm_buzz: pwm_buzz {
            pwms = <&pwm1 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
            status = "okay";
        };
    };

    zephyr,user {
        io-channels = <&adc 0>;
    };

    pwr_gpios {
        compatible = "gpio-keys";
        usb_detect: usb_detect {
            gpios = <&gpio1 14 GPIO_ACTIVE_HIGH>;
        };
        charging: charging {
            gpios = <&gpio1 15 GPIO_ACTIVE_HIGH>;
        };
        pwr_on: pwr_on {
            gpios = <&gpio1 8 GPIO_ACTIVE_HIGH>;
        };
        haptic_pin: haptic_pin {
            gpios = <&gpio1 13 GPIO_ACTIVE_HIGH>;
        };
        skyw_fem_mode: skyw_fem_mode{
            gpios = <&gpio1 4 GPIO_PULL_DOWN>;
        };
        skyw_fem_sel: skyw_fem_sel{
            gpios = <&gpio1 2 GPIO_PULL_DOWN>;
        };
    };

    buttons {
        compatible = "gpio-keys";
        btnpress: btn_press {
            gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
            label = "BTN_PRESS";
        };
    };

    leds {
        compatible = "gpio-leds";
        ledr: led_r {
            gpios = <&gpio1 10 0>;
            label = "led_r";
        };

        ledg: led_g {
            gpios = <&gpio1 11 0>;
            label = "led_g";
        };

        ledb: led_b {
            gpios = <&gpio1 12 0>;
            label = "led_b";
        };
    };

    aliases {
        led0 = &ledr;
        led1 = &ledg;
        led2 = &ledb;
        pwm-led0 = &pwm_ledr;
        pwm-led1 = &pwm_ledg;
        pwm-led2 = &pwm_ledb;
        sw0 = &btnpress;
        bootloader-led0 = &ledb;
        mcuboot-led0 = &ledg;
        watchdog0 = &wdt0;
        usb-dt = &usb_detect;
        chrg = &charging;
        pwron = &pwr_on;
        pwm-buzz = &pwm_buzz;
        buzz-en = &haptic_pin;
    };
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        boot_partition: partition@0 {
            label = "mcuboot";
            reg = <0x0 0xc000>;
        };
        slot0_partition: partition@c000 {
            label = "image-0";
            reg = <0xc000 0x72000>;
        };
        slot1_partition: partition@7e000 {
            label = "image-1";
            reg = <0x7e000 0x72000>;
        };
        scratch_partition: partition@f0000 {
            label = "image-scratch";
            reg = <0xf0000 0xa000>;
        };
        storage_partition: partition@fa000 {
            label = "storage";
            reg = <0xfa000 0x6000>;
        };
    };
};


&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&radio {
    fem = <&{/skyworks-rfx2411/}>;
};

&gpio1 {
    status = "okay";
};

&pwm0 {
    pinctrl-0 = <&pwm0_default>;
    pinctrl-1 = <&pwm0_sleep>;
    pinctrl-names = "default", "sleep";
    status = "okay";
};

&pwm1 {
    status = "okay";
    pinctrl-0 = <&pwm1_default>;
    pinctrl-1 = <&pwm1_sleep>;
    pinctrl-names = "default", "sleep";
};

&uart0 {
    status = "okay";
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;
    pinctrl-names = "default", "sleep";
    compatible = "nordic,nrf-uart";
    current-speed = <115200>;
};

&i2c0 {
    status = "okay";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
};

&adc {
    #address-cells = <1>;
    #size-cells = <0>;
    status = "okay";
    channel@0 {
        reg = <0>;
        zephyr,gain = "ADC_GAIN_1_6";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,input-positive = <NRF_SAADC_AIN0>; /* P0.02 for nRF52xx */
        zephyr,resolution = <12>;
    };
};

&nfct {
    status = "disabled";
};

&timer0 {
    status = "okay";
};

&timer1 {
    status = "okay";
};

&usbd {
    status = "disabled";
};
